{
  "icon_theme": "Material Icon Theme",
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    }
  },
  "auto_update": true,
  "autosave": "on_focus_change",
  "base_keymap": "SublimeText",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font",
  "buffer_font_features": {
    "calt": true
  },
  "buffer_font_size": 15,
  "buffer_line_height": "comfortable",
  "chat_panel": {
    "button": "never"
  },
  "confirm_quit": true,
  "cursor_blink": false,
  "cursor_shape": "bar",
  "current_line_highlight": "all",
  "collaboration_panel": {
    "button": false
  },
  "edit_predictions": {
    "disabled_globs": ["**/.env*", "**/*.pem", "**/*.key", "**/*.cert", "**/*.crt", "**/.dev.vars", "**/secrets.yml"],
    // Display predictions inline only when holding a modifier key (alt by default).
    "mode": "subtle",
    "enabled_in_text_threads": true
  },
  "enable_language_server": true,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "file_types": {
    "HTML": ["svg", "njk"]
  },
  "format_on_save": "off",
  "formatter": "auto",
  "git": {
    "git_gutter": "tracked_files"
  },
  "gutter": {
    "line_numbers": true,
    "folds": true
  },
  "indent_guides": {
    "active_line_width": 4,
    "enabled": true,
    "line_width": 2,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "hard_tabs": false,
  "languages": {
    "JSON": {
      "hard_tabs": false,
      "tab_size": 2
    }
  },
  "line_indicator_format": "long",
  "preferred_line_length": 100,
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true
  },
  "project_panel": {
    "dock": "left",
    "git_status": true,
    "default_width": 400,
    "file_icons": true,
    "folder_icons": true,
    "indent_size": 25,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true,
    "scrollbar": {
      "show": "always"
    }
  },
  "restore_on_startup": "last_session",
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tab_size": 2,
  "tabs": {
    "git_status": true,
    "close_position": "right"
  },
  "theme": "One Dark Pro",
  "scroll_beyond_last_line": "one_page",
  "scrollbar": {
    "show": "always",
    "git_diff": true,
    "diagnostics": "all",
    "selected_text": true,
    "selected_symbol": true
  },
  "show_edit_predictions": true,
  "show_call_status_icon": true,
  "show_whitespaces": "all",
  "soft_wrap": "editor_width",
  "ui_font_family": "Inter",
  "ui_font_features": {
    "calt": true
  },
  "ui_font_size": 15,
  "use_autoclose": true,
  "vertical_scroll_margin": 15
}
