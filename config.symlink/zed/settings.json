{
    "active_pane_magnification": 1.0,
    "auto_update": true,
    "autosave": "on_focus_change",
    "base_keymap": "SublimeText",
    "buffer_font_family": "JetBrainsMonoNL Nerd Font",
    "buffer_font_features": {
        "calt": true
    },
    "buffer_font_size": 15,
    "buffer_line_height": "comfortable",
    "chat_panel": {
        "button": false
    },
    "confirm_quit": true,
    "cursor_blink": false,
    "collaboration_panel": {
        "button": false
    },
    "default_dock_anchor": "bottom",
    "enable_language_server": true,
    "features": {
        "copilot": false
    },
    "format_on_save": "off",
    "formatter": "auto",
    "git": {
        "git_gutter": "tracked_files"
    },
    "gutter": {
        "line_numbers": true,
        "code_actions": true,
        "folds": true
    },
    "indent_guides": {
      "enabled": true,
      "line_width": 2,
      "coloring": "indent_aware",
      "background_coloring": "disabled"
    },
    "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true
    },
    "hard_tabs": false,
    "language_overrides": {
        "JSON": {
            "hard_tabs": false,
            "tab_size": 4
        }
    },
    "line_indicator_format": "long",
    "preferred_line_length": 100,
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "project_panel": {
        "dock": "left",
        "git_status": true,
        "default_width": 400,
        "file_icons": true,
        "folder_icons": true
    },
    "project_panel.auto_fold_dirs": true,
    "restore_on_startup": "last_workspace",
    "tab_bar": {
        "show_nav_history_buttons": false
    },
    "tab_size": 2,
    "tabs": {
        "git_status": true,
        "close_position": "right"
    },
    "theme": "XY-Zed",
    "scrollbar": {
        "show": "always",
        "git_diff": true,
        "selections": true,
        "symbols_selections": true,
        "diagnostics": true
    },
    "show_copilot_suggestions": true,
    "show_call_status_icon": true,
    "show_whitespaces": "all",
    "soft_wrap": "editor_width",
    "ui_font_family": "Inter",
    "ui_font_features": {
        "calt": true
    },
    "ui_font_size": 15,
    "use_autoclose": true,
    "vertical_scroll_margin": 15
}
